# Example Terraform variables for backend infrastructure
# Copy this file to terraform.tfvars and customize as needed

# Azure region for backend resources
location = "East US"

# Resource naming
state_resource_group_name    = "rg-terraform-state"
state_storage_account_prefix = "tfstate"
state_container_name         = "tfstate"

# Storage configuration
storage_replication_type = "LRS"  # Options: LRS, GRS, RAGRS, ZRS, GZRS, RAGZRS
state_retention_days     = 30     # Days to retain deleted state files

# Project configuration
project_name = "ecommerce-infrastructure"

# Security: Principal IDs that need access to state storage
# Add service principal IDs, user IDs, or group IDs as needed
terraform_state_contributors = [
  # "00000000-0000-0000-0000-000000000000"  # Example service principal ID
]

# Feature flags
enable_versioning   = true
enable_soft_delete  = true

# Environment state file keys (customize if needed)
environment_keys = {
  dev   = "dev/terraform.tfstate"
  stage = "stage/terraform.tfstate"
  prod  = "prod/terraform.tfstate"
}

# Additional tags for all resources
additional_tags = {
  Owner      = "DevOps Team"
  CostCenter = "Engineering"
  # Environment = "backend"  # Don't override - set automatically
}
