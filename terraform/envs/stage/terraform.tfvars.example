# Example configuration for staging environment
# Copy this to terraform.tfvars when you want to use an existing resource group

# Resource Group Configuration - Create new resource group for staging
create_resource_group = true
resource_group_location = "East US"

# Alternative: Use existing resource group
# create_resource_group = false
# existing_resource_group_name = "rg-ecommerce-shared"

# AKS Cluster Configuration for Staging
# kubernetes_version = "1.27.3"
# node_count = 3
# vm_size = "Standard_D4s_v3"
# min_node_count = 2
# max_node_count = 8

# Optional: Azure AD group for cluster admin access
# admin_group_object_ids = ["12345678-1234-1234-1234-123456789012"]

# Optional: Enable additional features
# enable_azure_policy = true
# enable_http_application_routing = false

# Optional: Custom network configuration
# service_cidr = "10.1.0.0/16"
# dns_service_ip = "10.1.0.10"
